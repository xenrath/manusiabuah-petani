<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="#00BCD4"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            >

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/layout_topProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:paddingBottom="20dp"
                    android:background="#4DD0E1"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textColor="@color/colorBlack"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biodata diri Anda"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="75dp"
                        >

                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/user"
                            android:scaleType="centerCrop"
                            />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saiful Labib"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="saifullabib@gmail.com"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    android:orientation="vertical"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_update_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#B2EBF2"
                        app:cardCornerRadius="5dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_baseline_edit_24"
                            app:drawableEndCompat="@drawable/ic_baseline_chevron_right_24"
                            app:drawableTint="@color/colorBlack"
                            android:drawablePadding="10dp"
                            android:text="Ubah Profile"
                            android:textColor="@color/colorBlack"
                            android:padding="15dp"
                            tools:ignore="HardcodedText"
                            android:importantForAutofill="no"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnUpdatePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#B2EBF2"
                        app:cardCornerRadius="5dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_baseline_lock_24"
                            app:drawableEndCompat="@drawable/ic_baseline_chevron_right_24"
                            app:drawableTint="@color/colorBlack"
                            android:drawablePadding="10dp"
                            android:text="Ubah Password"
                            android:textColor="@color/colorBlack"
                            android:padding="15dp"
                            tools:ignore="HardcodedText"
                            android:importantForAutofill="no"
                            />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="10dp"
                        android:background="#0097A7" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_history_transaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#B2EBF2"
                        app:cardCornerRadius="5dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_baseline_shopping_cart_24"
                            app:drawableEndCompat="@drawable/ic_baseline_chevron_right_24"
                            app:drawableTint="@color/colorBlack"
                            android:drawablePadding="10dp"
                            android:text="Riwayat Transaksi"
                            android:textColor="@color/colorBlack"
                            android:padding="15dp"
                            tools:ignore="HardcodedText"
                            android:importantForAutofill="no"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_my_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#B2EBF2"
                        app:cardCornerRadius="5dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_baseline_add_shopping_cart_24"
                            app:drawableEndCompat="@drawable/ic_baseline_chevron_right_24"
                            app:drawableTint="@color/colorBlack"
                            android:drawablePadding="10dp"
                            android:text="Produk Saya"
                            android:textColor="@color/colorBlack"
                            android:padding="15dp"
                            tools:ignore="HardcodedText"
                            android:importantForAutofill="no"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_about_me"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#B2EBF2"
                        app:cardCornerRadius="5dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_baseline_shopping_cart_24"
                            app:drawableEndCompat="@drawable/ic_baseline_chevron_right_24"
                            app:drawableTint="@color/colorBlack"
                            android:drawablePadding="10dp"
                            android:text="Tentang Saya"
                            android:textColor="@color/colorBlack"
                            android:padding="15dp"
                            tools:ignore="HardcodedText"
                            android:importantForAutofill="no"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="20dp"
                android:text="Keluar"
                android:background="@drawable/bg_btn_beli"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>